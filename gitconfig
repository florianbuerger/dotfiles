[user]
	name = Florian Buerger
	email = florian@florianbuerger.com

[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/florian/.gitignore_global
	editor = vim #nvim #~/.bin/subl -n -w
	pager = diff-so-fancy | less --tabs=4 -RFX

[push]
	default = simple

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[credential]
	helper = osxkeychain

[alias]
	prune = fetch --prune
	undo = reset --soft HEAD^
	stash-all = stash save --include-untracked
 	glog = log --graph --pretty=format:\"%C(yellow)%h%Creset %ad  %s%C(cyan)%d%Creset %C(green)[%an]%Creset\" --date=short
	branch-name = "!git rev-parse --abbrev-ref HEAD"
	publish = "!git push -u origin $(git branch-name)"
	unmerged = "branch --no-merged"
	amend = "commit -a --amend"
	append = town append
	hack = town hack
	kill = town kill
	prepend = town prepend
	prune-branches = town prune-branches
	rename-branch = town rename-branch
	repo = town repo
	ship = town ship
	sync = town sync
	opendiff = difftool --no-prompt --tool opendiff --dir-diff
	pr = town new-pull-request

[status]
	showUntrackedFiles = all

[color]
	status = always
	ui = true

[difftool]
	prompt = false

[mergetool]
	prompt = false
	keepBackup = false

